<h3>Products</h3>

<div class="row">
  <div class="section">
  <% @products.each do |product| %>
    <div class="col s4 " id='product-box'>
      <h4 class='click'><%= link_to product.name, product_path(product), remote: true %></h4>
      <div class="prod-info">
        <img src="http://lorempixel.com/200/200/" alt="placeholder image">
        <p><%= product.description %></p>
        <p><%= number_to_currency product.price %></p>
        <%= form_for @order_item, remote: true do |f| %>
          <%= f.hidden_field :product_id, value: product.id %>
          <%= f.number_field :quantity, placeholder: "Select a quantitiy to order." %>
          <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
</div>
